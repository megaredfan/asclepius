<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
	PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="buaa.bp.asclepius.mapper.UserMapper">
	<resultMap id="userMap" type="buaa.bp.asclepius.model.User">
		<id property="id" column="id" />
		<result property="password" column="password" />
		<result property="registerTime" column="regtime" />
		<result property="lastLogin" column="lastlogin" />
		<result property="idNo" column="idno" />
		<result property="sex" column="sex" />
		<result property="userName" column="username" />
		<result property="realName" column="realname" />
		<result property="creditLevel" column="creditlevel" />
	</resultMap>
	
	<select id="getAllUsers" resultMap="userMap">
	    <![CDATA[
	    	select * from user;
		]]>
	</select>
	
	<select id="getUserById" parameterType="long" resultMap="userMap">
	    <![CDATA[
	    	select * from user where id = #{id};
		]]>
	</select>
	<insert id="createUser" parameterType="buaa.bp.asclepius.model.User">
	    <![CDATA[
	    	insert into user(id,password,regtime,lastlogin,idno,sex,username,realname,creditlevel)
	    		values(#{id},#{password},#{registerTime},#{lastLogin},#{idNo},#{sex},#{userName},#{realName},#{creditLevel});
		]]>
	</insert>
	<update id="updateUser" parameterType="buaa.bp.asclepius.model.User">
		<![CDATA[
	    	update user set password=#{password},regtime=#{registerTime},lastlogin=#{lastLogin},idno=#{idNo},sex=#{sex},username=#{userName},realname=#{realName},creditlevel=#{creditLevel}
	    		where id=#{id};
		]]>
	</update>
	<delete id="deleteUser" parameterType="long">
		<![CDATA[
	    	delete from user where id = #{id};
		]]>
	</delete>
	<select id="getUserByName" parameterType="String" resultMap="userMap">
		<![CDATA[
	    	select * from user where username = #{username};
		]]>
	</select>
</mapper>